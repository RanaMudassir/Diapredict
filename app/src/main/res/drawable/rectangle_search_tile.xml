<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="0dp" android:top="0dp">
                <shape>
                    <corners android:bottomLeftRadius="25dp"
                        android:bottomRightRadius="25dp"
                        android:topLeftRadius="0dp"
                        android:topRightRadius="0dp">
                    </corners>
                    <solid android:color="#00bababa" />
                </shape>
            </item>
            <item android:bottom="3dp" android:left="0dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="#ffffff" android:startColor="#ffffff" />
                    <stroke android:width="0dp" android:color="#50BABABA" />
                    <corners android:bottomLeftRadius="25dp"
                        android:bottomRightRadius="25dp"
                        android:topLeftRadius="0dp"
                        android:topRightRadius="0dp">
                    </corners>
                    <padding android:bottom="10dp" android:left="10dp"
                        android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>